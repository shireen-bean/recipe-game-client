
{{#each recipes as |recipe|}}
{{#link-to 'recipe' recipe}}
<div class="card col-xs-12 col-sm-4 recipe-card">
  <img class="card-img-top browse-recipe-image" src= {{recipe.image}} alt="Card image cap">
  <div class="card-block">
    <h4 class="card-title">{{recipe.title}}</h4>
    <p class="card-text">{{recipe.ingredients}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Level:{{recipe.level}}</li>
    <li class="list-group-item">Time:{{recipe.time}} min</li>
  </ul>
  <div class="card-block">
    <!-- {{favorite-star recipes=recipes favorite="favorite"}} -->
    <!-- <a href="#" class="card-link">Another link</a> -->
  </div>
</div>
{{/link-to}}
{{/each}}
